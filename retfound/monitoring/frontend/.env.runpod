# RETFound Frontend Environment Configuration for RunPod
# =====================================================

# API Configuration
VITE_API_URL=http://0.0.0.0:8000
VITE_WS_URL=ws://0.0.0.0:8000

# RunPod Mode
VITE_RUNPOD_MODE=true

# Development Configuration
VITE_DEV_MODE=false
VITE_DEBUG=false

# Monitoring Configuration
VITE_REFRESH_INTERVAL=1000
VITE_RECONNECT_INTERVAL=3000
VITE_MAX_RECONNECT_ATTEMPTS=5

# Chart Configuration
VITE_CHART_ANIMATION=true
VITE_CHART_THEME=dark

# Feature Flags
VITE_ENABLE_CRITICAL_ALERTS=true
VITE_ENABLE_GPU_MONITORING=true
VITE_ENABLE_SYSTEM_STATS=true
VITE_ENABLE_EXPORT=true

# Performance
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_BUFFER_SIZE=1000
