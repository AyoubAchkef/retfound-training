# RETFound Training Environment Variables
# Copy this file to .env and fill in your values

# General Settings
PROJECT_NAME=retfound-training
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Paths
BASE_PATH=/workspace
DATASET_PATH=/workspace/CAASI-DATASET/01_CLASSIFICATION
OUTPUT_PATH=/workspace/outputs/retfound
CHECKPOINT_PATH=/workspace/checkpoints/retfound
CACHE_DIR=/workspace/caasi_cache/retfound

# RETFound Weights Paths
RETFOUND_CFP_PATH=/workspace/RETFound_mae_natureCFP.pth
RETFOUND_OCT_PATH=/workspace/RETFound_mae_natureOCT.pth
RETFOUND_MEH_PATH=/workspace/RETFound_mae_meh.pth

# Hardware Settings
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
OMP_NUM_THREADS=8

# Training Settings
DEFAULT_BATCH_SIZE=16
DEFAULT_EPOCHS=100
DEFAULT_LEARNING_RATE=5e-5
USE_MIXED_PRECISION=true
USE_GRADIENT_CHECKPOINTING=true

# Monitoring
USE_WANDB=true
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=caasi-retfound
WANDB_ENTITY=your_entity_here

USE_TENSORBOARD=true
TENSORBOARD_LOG_DIR=/workspace/outputs/retfound/tensorboard

# Data Settings
NUM_WORKERS=8
PIN_MEMORY=true
PERSISTENT_WORKERS=true
PREFETCH_FACTOR=2

# Optimization
USE_SAM_OPTIMIZER=true
USE_EMA=true
USE_TTA=true
USE_COMPILE=true

# Export Settings
EXPORT_ONNX=false
EXPORT_TORCHSCRIPT=true
EXPORT_TENSORRT=false

# API Settings (for future deployment)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# External Services
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=

# Debug Settings
DEBUG=false
PROFILE_MEMORY=false
PROFILE_TIME=false
SAVE_DEBUG_IMAGES=false
